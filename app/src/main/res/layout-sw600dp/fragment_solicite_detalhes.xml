<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="75dp"
        android:paddingRight="75dp"
        android:paddingTop="45dp">

        <TextView
            android:id="@+id/sigiloso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#fff5c5"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/confidential_disclaimer" />

        <br.com.lfdb.zup.widget.EditTextComentario
            android:id="@+id/comentario"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comments_box_size"
            android:background="#f1f1f1"
            android:gravity="top"
            android:hint="@string/se_desejar_detalhe_a_situacao"
            android:maxLines="4"
            android:minLines="4"
            android:padding="10dp"
            android:textColor="#4c4c4c"
            android:textSize="@dimen/instruction_text_size" />

        <TextView
            android:id="@+id/loginSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:gravity="left"
            android:textSize="@dimen/navigation_text_size"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/postSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/seletor_postagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:contentDescription="@string/seletor_on_off"
                android:src="@drawable/switch_off" />

            <TextView
                android:id="@+id/redeSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/seletor_postagem"
                android:gravity="left"
                android:text="@string/compartilhar_rede_social"
                android:textColor="#333"
                android:textSize="@dimen/instruction_text_size" />
        </RelativeLayout>

        <TextView
            android:id="@+id/termos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="left"
            android:textColor="#333"
            android:textSize="@dimen/instruction_text_size" />

    </LinearLayout>

</ScrollView>